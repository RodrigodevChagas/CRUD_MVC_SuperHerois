@model List<Cadastro_Herois>
@{
    ViewData["Title"] = "Cadastros";
}

<div class="text-center">
    <h1 class="display-4">Cadastro Herois</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Cadastro" asp-action="Criar">Adicionar novo Héroi</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Nome de Heroi</th>
                <th scope="col">Local de Origem</th>                
                <th scope="col">Empresa</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
                @if (Model != null && Model.Any()) 
                {
                    foreach (Cadastro_Herois herois in Model) 
                    {
                        <tr>
                            <th scope="row">@herois.Id</th>
                            <td>@herois.Nome</td>
                            <td>@herois.Nome_De_Heroi</td>
                            <td>@herois.Local_de_Origem</td>
                            <td>@herois.Empresa</td>
                            <td>
                                <a role="button" class="btn btn-primary" asp-controller="Cadastro" asp-action="Editar" asp-route-id="@herois.Id">Editar</a>
                                <a role="button" class="btn btn-danger" asp-controller="Cadastro" asp-action="ApagarConfirmacao" asp-route-id="@herois.Id">Apagar</a>
                            </td>
                        </tr>
                    }
                }
